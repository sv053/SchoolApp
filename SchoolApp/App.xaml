<Application x:Class="SchoolApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SchoolApp"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        
        <Style x:Key="WindowStyle1" TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Book Antiqua" />
            <Setter Property="FontSize" Value="12pt" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Background">
                <Setter.Value>
                <DrawingBrush  Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <GeometryDrawing Brush="White">
                                <GeometryDrawing.Geometry>
                                    <RectangleGeometry Rect="0,0,1,1" />
                                </GeometryDrawing.Geometry>
                            </GeometryDrawing>
                            <GeometryDrawing Geometry="M0,0 L1,0 1,0.1, 0,0.1Z " Brush="#CCCCFF" />
                            <GeometryDrawing Geometry="M0,0 L0,1 0.1,1, 0.1,0Z" Brush="#CCCCFF" />
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
                <!--      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9AA1AC" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush> -->
                </Setter.Value>
            </Setter>


        </Style>
        <Style x:Key="WindowStyle2" TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Book Antiqua" />
            <Setter Property="FontSize" Value="10pt" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Background">
                <Setter.Value>
                    <DrawingBrush  Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="White">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,1,1" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Geometry="M0,0 L1,0 1,0.1, 0,0.1Z " Brush="#CCCCFF" />
                                <GeometryDrawing Geometry="M0,0 L0,1 0.1,1, 0.1,0Z" Brush="#CCCCFF" />
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                    <!--      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9AA1AC" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush> -->
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabStyle1" TargetType="{x:Type TabControl}">
            <Setter Property="FontFamily" Value="Roboto" />
            <Setter Property="FontSize" Value="11pt" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Foreground" Value="DarkSlateBlue"/>
            <Setter Property="Background">
                <Setter.Value>
                    <DrawingBrush  Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="White">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,1,1" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Geometry="M0,0 L1,0 1,0.1, 0,0.1Z " Brush="#CCCCFF" />
                                <GeometryDrawing Geometry="M0,0 L0,1 0.1,1, 0.1,0Z" Brush="#CCCCFF" />
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                    <!--      <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9AA1AC" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush> -->
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuBtnStyle" TargetType="{x:Type MenuItem}">
            <!--
                    <Setter Property="Background">
                        <Setter.Value>
                           <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
