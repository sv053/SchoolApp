                            </LinearGradientBrush>
                         </Setter.Value>
                    </Setter>
            -->
            <Setter Property="Margin" Value="10,10,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="PaleVioletRed"/> 
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Roboto" />
            <Setter Property="FontSize" Value="12pt" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="DarkSlateBlue" />
            <Setter Property="FontSize" Value="12pt" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,0,0"></Setter>
            <Setter Property="BorderBrush" Value="BlanchedAlmond" ></Setter>

        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="DarkSlateBlue"></Setter>
            <Setter Property="Height" Value="Auto"></Setter>
           <!-- <Setter Property="BorderBrush" Value="BlanchedAlmond" ></Setter>
             <Setter Property="BorderThickness" Value="0,0,0,3"></Setter>
            <Setter Property="Foreground" Value="Wheat" />
           <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA4A1A1" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                     </LinearGradientBrush>
                </Setter.Value>
            </Setter>
         -->   
        </Style>
        
        <Style x:Key="double" TargetType="TextBlock">
            <Setter Property="Text" Value="{Binding StringFormat='{}{0,12:E4}'}" />
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
