                <Label Grid.Row="1" Margin="0,0,24,0" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">Внести оплату:</Label>
            </Grid>
        </Border>  -->

        </Grid>
    </ScrollViewer>
</Window>
